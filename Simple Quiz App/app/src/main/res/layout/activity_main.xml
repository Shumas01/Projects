<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Question 1 -->
            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 1: What is the Capital of Pakistan?"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radioIslamabad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A: Islamabad"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/radioLahore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B: Lahore"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/radioKarachi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C: Karachi"
                    android:textSize="18sp" />
            </RadioGroup>

            <!-- Question 2 -->
            <TextView
                android:id="@+id/txt12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 2: Who is the Founder of Pakistan?"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="16dp"
                android:paddingBottom="8dp" />

            <RadioGroup
                android:id="@+id/radioGroup2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/Quaid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A: Quaid e Azam"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/Jinnah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B: Jinnah"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/Gandhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C: Gandhi"
                    android:textSize="18sp" />
            </RadioGroup>

            <!-- Question 3 -->
            <TextView
                android:id="@+id/txt13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 3: What is 2 + 2?"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="16dp"
                android:paddingBottom="8dp" />

            <RadioGroup
                android:id="@+id/radioGroup3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A: 2"
                    android:textSize="22sp" />

                <RadioButton
                    android:id="@+id/three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B: 3"
                    android:textSize="22sp" />

                <RadioButton
                    android:id="@+id/four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C: 4"
                    android:textSize="22sp" />
            </RadioGroup>

            <!-- Question 4 -->
            <TextView
                android:id="@+id/txt14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 4: What is the National Animal of Pakistan?"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="16dp"
                android:paddingBottom="8dp" />

            <RadioGroup
                android:id="@+id/radioGroup4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/markhor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A: Markhor"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/lion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B: Lion"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/tiger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C: Tiger"
                    android:textSize="18sp" />
            </RadioGroup>

            <!-- Submit Button -->
            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit Answers"
                android:layout_marginTop="24dp"
                android:padding="10dp" />
            <TextView
                android:id="@+id/txtResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:textColor="@android:color/black" />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
